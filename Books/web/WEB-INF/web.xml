<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <servlet>
        <servlet-name>mainPage</servlet-name>
        <servlet-class>Servlets.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>printAllBooksPage</servlet-name>
        <servlet-class>Servlets.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBookPage</servlet-name>
        <servlet-class>Servlets.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBookPage</servlet-name>
        <servlet-class>Servlets.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddBook</servlet-name>
        <servlet-class>Servlets.AddBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteBook</servlet-name>
        <servlet-class>Servlets.DeleteBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateBook</servlet-name>
        <servlet-class>Servlets.UpdateBook</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrintBook</servlet-name>
        <servlet-class>Servlets.PrintBook</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>printAllBooksPage</servlet-name>
        <url-pattern>/printAllBooks.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mainPage</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookPage</servlet-name>
        <url-pattern>/addBook.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBookPage</servlet-name>
        <url-pattern>/deleteBook.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBook</servlet-name>
        <url-pattern>/add.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteBook</servlet-name>
        <url-pattern>/delete.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateBook</servlet-name>
        <url-pattern>/update.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrintBook</servlet-name>
        <url-pattern>/printBook.do</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
    </welcome-file-list>

</web-app>
